---
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import ScrollAnimator from '../components/ScrollAnimator.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "swimmin' parade official website", image = '/og-image.webp' } = Astro.props;
const siteUrl = 'https://example-band.jp';
const pageUrl = new URL(Astro.url.pathname, siteUrl).href;
---
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title} | swimmin' parade</title>
		<meta name="description" content={description} />

		<!-- Social Media Tags -->
		<meta property="og:title" content={`${title} | swimmin' parade`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, siteUrl).href} />
		<meta property="og:url" content={pageUrl} />
		<meta property="og:type" content="website" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={`${title} | swimmin' parade`} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={new URL(image, siteUrl).href} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;500;600;700&family=Zen+Maru+Gothic:wght@500;700&display=swap" rel="stylesheet">

		<script type="application/ld+json" set:html={JSON.stringify({
		  "@context": "https://schema.org",
		  "@type": "MusicGroup",
		  "name": "swimmin' parade",
		  "url": siteUrl,
		  "sameAs": [
		    "https://x.com/swipara2023?s=21",
		    "https://youtu.be/4aaufut-Uww?si=6WRR6nDznC9BXo38",
		    "https://linkcloud.mu/2cd4e67c"
		  ]
		})} />

	</head>
	<body class="flex min-h-screen flex-col bg-background font-body text-text">
		<SiteHeader />
		<main class="flex-1 pt-[4.75rem] sm:pt-20">
			<slot />
		</main>
		<SiteFooter />
		<ScrollAnimator />
	</body>
</html>
