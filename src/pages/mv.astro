---
import Layout from '../layouts/Layout.astro';
---

<Layout title="MV">
  <div class="mx-auto max-w-6xl px-4 py-8 sm:py-16">
    <div class="text-center mb-10">
      <h1 class="text-3xl font-bold font-heading text-text sm:text-4xl">Music Video</h1>
    </div>
    
    <div class="flex flex-col items-center">
      <div class="w-full max-w-3xl aspect-video">
        <div class="relative aspect-video w-full overflow-hidden rounded-xl shadow-lg">
          <iframe 
            width="100%" 
            height="100%" 
            src="https://www.youtube.com/embed/4aaufut-Uww" 
            title="Music Video - swimmin' parade" 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen
            class="w-full h-full">
          </iframe>
        </div>
      </div>
      
      <div class="mt-6 text-center">
        <a 
          href="/" 
          class="inline-block rounded-full bg-primary px-6 py-2 text-sm font-medium text-white transition-colors hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
        >
          Back to Home
        </a>
      </div>
    </div>
  </div>
</Layout>