---
import type { Member } from '../data/members';

interface Props {
  member: Member;
}

const { member } = Astro.props;
---

<a href={`/members#${member.id}`} class="group text-center block">
  <div class="relative overflow-hidden rounded-2xl shadow-lg group-hover:shadow-pop transition-all duration-300 transform group-hover:scale-105">
    <img src={member.photo} alt={member.name} class="w-full h-full object-cover" />
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute bottom-4 left-4 text-white">
      <h3 class="text-xl font-bold font-heading">{member.name}</h3>
      <p class="text-white/80">{member.role}</p>
    </div>
  </div>
</a>
