---
import type { Member } from '../data/members';

interface Props {
  member: Member;
}

const { member } = Astro.props;
---

<a href={`/members#${member.id}`} class="group block text-center focus-ring-lg">
  <div class="relative aspect-[3/4] overflow-hidden rounded-[2rem] border border-white/40 bg-black/10 shadow-[0_24px_44px_rgba(15,23,42,0.25)] transition-transform duration-300 group-hover:-translate-y-1 group-hover:shadow-[0_30px_60px_rgba(15,23,42,0.25)]">
    <img src={member.photo} alt={member.name} class="h-full w-full object-cover" loading="lazy" decoding="async" />
    <div class="absolute inset-0 bg-gradient-to-t from-black/45 via-black/10 to-transparent"></div>
    <div class="absolute bottom-4 left-0 right-0 px-4 text-left text-white sm:bottom-5">
      <h3 class="text-lg font-bold font-heading sm:text-xl">{member.name}</h3>
      <p class="text-sm text-white/80 sm:text-base">{member.role}</p>
    </div>
  </div>
</a>
