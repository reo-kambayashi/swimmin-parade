---
import { members } from '../data/members.ts';
---

<section class="relative overflow-hidden bg-gradient-to-b from-primary-light/70 via-white to-white py-16 sm:py-28">
  <div class="pointer-events-none absolute inset-0" aria-hidden="true">
    <div class="floating-aura absolute -top-20 left-1/2 h-64 w-64 -translate-x-1/2 rounded-full bg-primary/15 blur-3xl"></div>
    <div class="floating-aura absolute bottom-10 left-10 hidden h-56 w-56 rounded-full bg-sky-300/20 blur-3xl sm:block"></div>
  </div>
  <div class="mx-auto max-w-6xl px-4">
    <h2
      class="relative mb-10 text-center text-3xl font-bold font-heading text-text sm:mb-14 sm:text-4xl"
      data-animate="fade-up"
      data-animate-distance="36px"
    >
      Members
    </h2>
    <div class="relative grid grid-cols-2 gap-6 sm:grid-cols-3 lg:grid-cols-4 lg:gap-8" data-animate-stagger="0.09s">
      {members.map(member => (
        <a
          href={`/members#${member.id}`}
          class="group flex flex-col items-center rounded-3xl bg-white/80 p-4 text-center shadow-[0_18px_36px_rgba(148,197,255,0.25)] backdrop-blur-md transition-transform duration-300 hover:-translate-y-1 focus-ring"
          data-animate="tilt-float"
          data-animate-distance="30px"
        >
          <div class="relative mb-4 h-28 w-28 overflow-hidden rounded-full border border-white/70 shadow-md sm:h-32 sm:w-32">
            <img src={member.photo} alt={member.name} class="h-full w-full object-cover" loading="lazy" decoding="async" />
            <span class="absolute inset-0 rounded-full bg-gradient-to-br from-white/10 to-primary/10 opacity-0 transition-opacity duration-300 group-hover:opacity-100"></span>
          </div>
          <h3 class="text-lg font-bold font-heading text-text sm:text-xl">{member.name}</h3>
          <p class="text-sm text-primary sm:text-base">{member.role}</p>
        </a>
      ))}
    </div>
    <div class="mt-12 text-center" data-animate="fade-up" data-animate-distance="28px">
      <a
        href="/members"
        class="btn-pill btn-float focus-ring border border-primary/30 bg-white/90 px-8 py-3 text-base text-primary shadow-pop duration-300 hover:border-primary/50"
      >
        View All Members
      </a>
    </div>
  </div>
</section>

<style>
  .floating-aura {
    animation: auraFloat 9s ease-in-out infinite alternate;
  }

  .floating-aura:nth-of-type(2) {
    animation-duration: 11s;
    animation-delay: 1.2s;
  }

  @keyframes auraFloat {
    0% {
      transform: translate3d(-12%, 0, 0) scale(0.95);
      opacity: 0.75;
    }
    50% {
      transform: translate3d(6%, -6%, 0) scale(1.05);
      opacity: 0.9;
    }
    100% {
      transform: translate3d(12%, 6%, 0) scale(0.92);
      opacity: 0.7;
    }
  }
</style>
